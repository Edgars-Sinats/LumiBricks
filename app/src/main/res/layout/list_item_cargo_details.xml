<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    style="@style/commonListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_marginTop="8dp"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools">
<!--    android:id="@+id/container1"-->

    <FrameLayout
        android:id="@+id/containerItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <View
            android:id="@+id/drag_handle"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:background="#20000000"
            android:clickable="true"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_gravity="top|start"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="124dp"
            android:hint="@string/brick_order_address"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/image_button_edit_address"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="82dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_edit_black_24dp"
            />

        <ImageButton
            android:id="@+id/image_button_add_item"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_brick_produce_black_24dp"
            />

        <com.lumibricks.widget.ExpandableItemIndicator
            android:id="@+id/indicator"
            android:layout_width="32dp"
            android:layout_height="match_parent"

            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            />

    </FrameLayout>

</FrameLayout>
