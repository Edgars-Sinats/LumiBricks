<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewEditListItemPopUp"
            android:layout_width="125dp"
            android:layout_height="55dp"

            android:gravity="center"
            android:text="@string/chooseItem"
            style="@style/AppTheme.Title"
            android:layout_marginStart="4dp"
            />

        <ImageView
            android:id="@+id/brickItemEditImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@id/textViewEditListItemPopUp"
            android:layout_alignBottom="@id/textViewEditListItemPopUp"
            android:src="@drawable/ic_assignment_choose_black_24dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>