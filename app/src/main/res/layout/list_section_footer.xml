<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:animateLayoutChanges="true"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relLay_footer_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/footerPayImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#757575"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/footerTextView1"
                style="@style/AppTheme.Subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="4dp"
                android:layout_alignTop="@+id/footerPayImage"
                android:layout_toEndOf="@+id/footerPayImage"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="PasÅ«tijuma summa " />

            <TextView
                android:id="@+id/footerTextOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/footerTextView1"
                android:layout_toEndOf="@id/footerPayImage"
                android:layout_marginStart="8dp"
                style="@style/AppTheme.Title"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:hint="@string/brick_order_price"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footerRelLayExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:visibility="visible"
            android:padding="8dp">

            <TextView
                android:id="@+id/footerTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summa bez PVN (EURO) "/>

            <TextView
                android:id="@+id/footerTextView2Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_alignTop="@id/footerTextView2Info"
                android:layout_toEndOf="@id/footerTextView2"
                android:hint="info"/>

            <TextView
                android:id="@+id/footerTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/footerTextView2"
                android:text="PVN(21%): "/>

            <TextView
                android:id="@+id/footerTextView3Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_alignTop="@id/footerTextView3"
                android:layout_toEndOf="@id/footerTextView3"
                android:hint="info"/>

            <TextView
                android:id="@+id/footerTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/footerTextView3"
                android:text="Summa apaksai "/>

            <TextView
                android:id="@+id/footerTextView4Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_alignTop="@id/footerTextView4"
                android:layout_toEndOf="@id/footerTextView4"
                android:hint="info"/>

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>